@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model BCKFreightTMS.Web.ViewModels.Shared.InvoicePreview

<a asp-action="DownloadInvoice" asp-route-id="@Model.InvoiceId" onclick='setTimeout(function () { $(".loading").hide() }, 3000);' id="downloadBtn" class="btn btn-primary m-2" title="Download"><b>@localizer["Изтегли"]</b><i class="fas fa-download ml-2"></i></a>

<div class="mt-3 p-5 bg-white shadow" style=" width: 25cm; margin: auto;">
    @Html.Raw(Model.Html)
</div>
<div class="col p-3"></div>

@section Scripts{
    <script>
        [...document.querySelectorAll(".noPrev")].forEach(e => e.style.display = "none");
    </script>
}