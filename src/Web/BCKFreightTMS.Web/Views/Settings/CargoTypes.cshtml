@model IEnumerable<BCKFreightTMS.Web.ViewModels.Settings.SettingViewModel>

<hr />
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" width="70%">Name</th>
            <th style="visibility: hidden;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in this.Model)
        {
            <tr>
                <td class="align-middle">@type.Id</td>
                <td class="align-middle">@type.Name</td>
                <td>
                    @if (type.AdminId is null)
                    {
                        <a class="btn btn-danger text-white disabled"><i class="far fa-trash-alt"></i></a>
                    }
                    else
                    {
                        <a asp-action="DeleteCargoType" asp-route-id="@type.Id" class="btn btn-danger text-white"><i class="far fa-trash-alt"></i></a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary text-white" onclick="showInPopup('/CargoTypes/AddCargoType', 'Add cargo type')">Add <i class="fa fa-plus"></i></a>
