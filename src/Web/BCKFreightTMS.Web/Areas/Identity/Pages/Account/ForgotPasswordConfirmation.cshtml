@page
@model ForgotPasswordConfirmation
@{
    this.ViewBag.Title = "Forgot password confirmation";
    this.Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>@this.ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/plugins/fontawesome-free-5.15.1-web/css/all.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.css">
    <link rel="stylesheet" href="~/css/adminlte.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page" style="background-image: url('/img/');
        background-image: url('/img/e13edc61-c4f9-468a-8e51-b21884df39d3.jpg');
        background-size: cover;
        background-position: center center;
        opacity: 0.9;
    ">
    <div class="login-box">
        <div class="login-logo">
            <b>BCK</b>Freight
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Please check your email to reset your password.</p>
                <div class="col-12">
                    <a asp-page="./Login" class="btn btn-primary btn-block">Login</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/adminlte.js"></script>
}


