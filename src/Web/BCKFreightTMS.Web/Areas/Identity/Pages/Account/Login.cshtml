@page
@model LoginModel
@{
    this.Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BCKFreight | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/plugins/fontawesome-free-5.15.1-web/css/all.css" asp-append-version="true">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/adminlte.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" asp-append-version="true">
</head>
<body class="hold-transition login-page" style="background-image: url('/img/');
        background-image: url('/img/e13edc61-c4f9-468a-8e51-b21884df39d3.jpg');
        background-size: cover;
        background-position: center center;
        opacity: 0.9;
    ">
    <div class="login-box">
        <div class="login-logo">
            <b>BCK</b>Freight
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                @if (this.Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">
                            <i class="fas fa-times"></i>
                        </button>
                        <strong>@this.Model.ErrorMessage</strong>
                    </div>
                }
                <span></span>
                <form method="post" novalidate ="novalidate">
                    <div class="input-group mb-1">
                        <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                     <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div class="input-group mb-1 mt-2">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger m-0"></span>
                    <div class="input-group row mt-2">
                        <div class="col-8">
                            <div class="custom-checkbox">
                                <label>
                                    <input asp-for="Input.RememberMe" type="checkbox" id="remember">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>
                </form>
                <p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" class="text-center">Register a new company</a>
                </p>
            </div>
        </div>
    </div>
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/adminlte.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
