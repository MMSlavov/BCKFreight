@model IEnumerable<BCKFreightTMS.Data.Models.ApplicationTemplate>
@{
    ViewData["Title"] = "Application Templates";
}

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-tools">
                            <a asp-action="PlaceholderReference" class="btn btn-info mr-2" target="_blank">
                                <i class="fas fa-question-circle"></i> Placeholder Reference
                            </a>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Create New Template
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="alert alert-info">
                                <h5><i class="icon fas fa-info"></i> No templates found</h5>
                                Create your first template to customize your application documents. Templates allow you to:
                                <ul>
                                    <li>Customize all text and formatting</li>
                                    <li>Add your company logo and branding</li>
                                    <li>Control the layout and structure</li>
                                    <li>Include custom terms and conditions</li>
                                    <li>Use dynamic placeholders for order data</li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 30%">Template Name</th>
                                        <th style="width: 15%">Status</th>
                                        <th style="width: 10%">Version</th>
                                        <th style="width: 15%">Created</th>
                                        <th style="width: 15%">Modified</th>
                                        <th style="width: 15%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var template in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@template.TemplateName</strong>
                                                @if (!string.IsNullOrEmpty(template.Description))
                                                {
                                                    <br /><small class="text-muted">@template.Description</small>
                                                }
                                            </td>
                                            <td>
                                                @if (template.IsDefault)
                                                {
                                                    <span class="badge badge-success"><i class="fas fa-check"></i> Default</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-info">v@template.Version</span>
                                            </td>
                                            <td>@template.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (template.ModifiedOn.HasValue)
                                                {
                                                    @template.ModifiedOn.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@template.Id" class="btn btn-sm btn-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#cloneModal-@template.Id" title="Clone">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                    <form asp-action="Delete" asp-route-id="@template.Id" method="post" style="display:inline;" 
                                                          onsubmit="return confirm('Are you sure you want to delete this template?')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>

                                                <!-- Clone Modal -->
                                                <div class="modal fade" id="cloneModal-@template.Id" tabindex="-1" role="dialog">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <form asp-action="Clone" asp-route-id="@template.Id" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Clone Template</h5>
                                                                    <button type="button" class="close" data-dismiss="modal">
                                                                        <span>&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="form-group">
                                                                        <label>New Template Name</label>
                                                                        <input type="text" name="newName" class="form-control" 
                                                                               value="@template.TemplateName (Copy)" required />
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Clone Template</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
