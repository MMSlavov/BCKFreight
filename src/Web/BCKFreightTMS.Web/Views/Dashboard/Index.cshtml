@model IEnumerable<BCKFreightTMS.Web.ViewModels.Orders.ActionIndexViewModel>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 class="pt-3">Contacts</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="Contacts" asp-action="Index" class="small-box-footer">Add <i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 class="pt-3">Orders</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-social-buffer"></i>
                    </div>
                    <a asp-controller="Orders" asp-action="Create" class="small-box-footer">Add <i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3 class="pt-3">Cargo</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-social-dropbox"></i>
                    </div>
                    <a asp-controller="Cargos" asp-action="AddCargo" class="small-box-footer">Add <i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3 class="pt-3">Vehicle</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-truck-moving"></i>
                    </div>
                    <a asp-controller="Vehicles" asp-action="AddVehicle" class="small-box-footer">Add <i class="fas fa-plus-circle"></i></a>
                </div>
            </div>
        </div>
        <div class="col-6"></div>
        <div class="row flex-row">
            <div class="m-2 card col-3">
                <div class="card-body p-2">
                    <h3>Bucharest <p class="m-0"><strong>Romania</strong></p></h3>
                    <iframe scrolling="no" frameborder="0" clocktype="html5" width="200" height="50" src="https://www.clocklink.com/html5embed.php?clock=047&timezone=Romania_Bucharest&color=gray&size=200&Title=&Message=&Target=&From=2020,1,1,0,0,0&Color=gray"></iframe>
                </div>
            </div>
            <div class="m-2 card col-3">
                <div class="card-body p-2">
                    <h3>Targovishte <p class="m-0"><strong>Bulgaria</strong></p></h3>
                    <iframe scrolling="no" frameborder="0" clocktype="html5" width="200" height="50" src="https://www.clocklink.com/html5embed.php?clock=047&timezone=Bulgaria_Sofia&color=gray&size=200&Title=&Message=&Target=&From=2020,1,1,0,0,0&Color=gray"></iframe>
                </div>
            </div>
            <div class="m-2 card col-3">
                <div class="card-body p-2">
                    <h3>Belgrade <p class="m-0"><strong>Serbia</strong></p></h3>
                    <iframe scrolling="no" frameborder="0" clocktype="html5" width="200" height="50" src="https://www.clocklink.com/html5embed.php?clock=047&timezone=Serbia_Belgrade&color=gray&size=200&Title=&Message=&Target=&From=2020,1,1,0,0,0&Color=gray"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<hr class="mt-1" />
<div class="card">
    <h5 class="card-header text-bold">
        Pending actions
    </h5>
    <div class="card-body">
        <table class="table table-striped table-hover rounded" id="actions_data">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    <th>
                        Destination
                    </th>
                    <th>
                        Due time
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-bold">
                            @item.TypeName
                        </td>
                        <td>
                            @item.AddressCity, @item.AddressStreetLine
                        </td>
                        <td class="text-bold">
                            @item.Until.ToLocalTime().ToString("dddd, dd MMMM yyyy")
                        </td>
                        <td class="text-center">
                            <a asp-controller="Orders" asp-action="Status" asp-route-id="@item.OrderId" class="btn btn-@(item.IsFinished?"success":"primary") @(item.IsFinished?"disabled":null)">@(item.IsFinished ? "Finished" : "Active")</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $('#actions_data').DataTable({
                "paging": false,
                "filter": true,
                "processing": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": false,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}


