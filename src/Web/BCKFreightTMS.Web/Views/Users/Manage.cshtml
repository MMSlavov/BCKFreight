@using BCKFreightTMS.Web.ViewModels.Users
@model ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage";
    Layout = null;
}

<form asp-action="Manage" asp-route-userId="@Model.UserId" onsubmit="return jQueryAjaxPost(this);">
    <div>
        Add/Remove roles for user - <strong>@Model.UserName</strong>.
    </div>
    <hr />
    <div class="form-group">
        @for(int i = 0; i < Model.RoleModels.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.RoleModels[i].RoleId" />
                <input type="hidden" asp-for="@Model.RoleModels[i].RoleName" />
                <input asp-for="@Model.RoleModels[i].Selected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.RoleModels[i].Selected">
                    @Model.RoleModels[i].RoleName
                </label>
            </div>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary" style="width:auto">Cancel</a>
    </div>
</form>
