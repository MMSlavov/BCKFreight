@model IEnumerable<BCKFreightTMS.Web.ViewModels.Orders.ListOrderViewModel>

<div class="p-2">
    <a asp-action="Create" class="btn btn-primary">Create new order</a>
</div>
<hr class="mt-1" />
<table class="table table-striped table-hover" id="orders_data">
    <thead>
        <tr>
            <th>
                Order
            </th>
            <th>
                Client
            </th>
            <th>
                Carrier
            </th>
            <th>
                Margin
            </th>
            <th>
                Status
            </th>
            <th style="visibility: hidden;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.CreatedOn.ToLocalTime().ToShortDateString()
                    <p class="mt-1">@Html.DisplayFor(modelItem => order.Voyage)</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderFromCompanyName)
                    <p>@($"{order.OrderFromContactFirstName} {order.OrderFromContactLastName}")</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderToCompanyName)
                    <p>@($"{order.OrderToContactFirstName} {order.OrderToContactLastName}")</p>
                </td>
                <td>
                    @(order.OrderFromPriceNetIn - order.OrderToPriceNetOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.StatusName)
                </td>
                <td class="px-2 text-center justify-content-center" style="width:12%">
                    <a asp-action="Edit" asp-route-id="@order.Id" title="Edit"><i class="pr-2 fas fa-edit"></i></a>
                    <a href="javascript:void(0);" onclick="showInPopup('Contacts/CompanyDetails/@order.Id', 'Details')" title="Detais">
                        <span>
                            <i class="p-1 fas fa-info-circle"></i>
                        </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@order.Id" title="Delete"><i class="pl-2 fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $('#orders_data').DataTable({
                "paging": true,
                "filter": true,
                "processing": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                //"scrollX": true,
                //"scrollCollapse": true,
            });
        });
    </script>
}
