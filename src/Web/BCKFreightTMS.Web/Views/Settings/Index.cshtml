@model IEnumerable<BCKFreightTMS.Web.ViewModels.Settings.SettingViewModel>

<hr />
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" width="70%">Name</th>
            <th style="visibility: hidden;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in this.Model)
        {
            <tr>
                <td class="align-middle">@role.Id</td>
                <td class="align-middle">@role.Name</td>
                <td>
                    @if (role.AdminId is null)
                    {
                        <a class="btn btn-danger text-white disabled"><i class="far fa-trash-alt"></i></a>
                    }
                    else
                    {
                        <a asp-action="DeletePersonRole" asp-route-id="@role.Id" class="btn btn-danger text-white"><i class="far fa-trash-alt"></i></a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary text-white" onclick="showInPopup('/Settings/AddPersonRole', 'Add person role')">Add <i class="fa fa-plus"></i></a>